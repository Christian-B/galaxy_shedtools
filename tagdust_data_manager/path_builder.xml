<tool id="path_data_manager" name="PATH index" tool_type="manage_data" version="0.0.1">
    <description>path inputter</description>
    <requirements>
        <requirement type="package" version="0.5.9">bwa</requirement>
    </requirements>
    <command interpreter="python">
        path_builder.py 
        --value "${value}" 
        --dbkey "${dbkey}" 
        --name "${name}" 
        --path "${path}" 
        --data_table_name "tagdust_reference" 
        --json_output_file "${json_output_file}"
    </command>
    <inputs>
        <param name="value" type="text" value="" label="value field for the entry" />
        <param name="dbkey" type="text" value="" label="dbkey field for the entry" />
        <param name="name" type="text" value="" label="name field for the entry" />
        <param name="path" type="text" value="" label="path field for the entry" />
    </inputs>
    <outputs>
        <data name="json_output_file" format="data_manager_json"/>
    </outputs>

    <help>
Adds a path to the tagdust references.
    </help>
    <citations>
    </citations>

</tool>
