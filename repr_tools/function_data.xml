<tool id="function_data_script" name="Function on all the data" version="0.1">
    <description>Extracts data and plots it using R</description>
    <requirements>
        <requirement type="package" version="3.2.1">R</requirement>
        <requirement type="package" version="0.0.1">R_repr</requirement>
        </requirements>  
    <stdio>
        <exit_code range="1" level="fatal" description="Error code 1 occurred" />
        <exit_code range="2:255" level="fatal" description="Unknown error occurred" />
    </stdio>        
    <command interpreter="bash">
    r_wrapper.sh $__tool_directory__/function_data.R --script_dir=$__tool_directory__  
        --input_file=$input_file
        #if $input_na
            --input_na=$input_na
        #end if 

        --data_function=$data_function

        --data_output_file=$output_file
        #if $output_na
            --output_na=$output_na
        #end if 
        --debug
    </command>
    <inputs>
        <param type="data" format="tabular" name="input_file" label="input file" />
        <param name="input_na" type="text" value="NA" label="Value to be considered NA in input file." />

        <param name="data_function" type="select" label="Data Function." help="Function to apply over all the data.">
            <option value="na_per_column"  selected="true">Count NA values per column. Appling colSums(is.na(data))</option> 
            <option value="na_per_row"  selected="true">Count NA Values per row. Appling rowSums(is.na(data))</option> 
            <option value="transpose"  selected="true">Transpose. Appling t(data)</option> 
            <option value="impute_knn"  selected="true">Impute. Appling impute.knn(as.matrix(data))$data</option> 
            <option value="transpose_impute_knn"  selected="true">Transposed Impute. Appling t(impute.knn(as.matrix(t(data)))$data)</option>
        </param>

        <param name="output_na" type="text" value="NA" label="Value to be considered NA in output file." />
    </inputs>
    <outputs>
        <data format="tabular" type="data" name="output_file" label="${data_function} of ${on_string}">
        </data>
    </outputs>

    <tests>
        <test>
            <param name="input_file" value="mini_extracted.tsv" />
            <param name="input_na" value="999" />
            <param name="data_function" value="na_per_column" />
            <param name="output_na" value="999" />
            <output name="output_file" file="mini_na_per_column.tsv" />
        </test>
        <test>
            <param name="input_file" value="mini_extracted.tsv" />
            <param name="input_na" value="999" />
            <param name="data_function" value="na_per_row" />
            <param name="output_na" value="999" />
            <output name="output_file" file="mini_na_per_row.tsv" />
        </test>
        <test>
            <param name="input_file" value="mini_extracted.tsv" />
            <param name="input_na" value="999" />
            <param name="data_function" value="transpose" />
            <param name="output_na" value="999" />
            <output name="output_file" file="mini_transposed.tsv" />
        </test>
        <test>
            <param name="input_file" value="khan_expr.tsv" />
            <param name="input_na" value="NA" />
            <param name="data_function" value="impute_knn" />
            <param name="output_na" value="NA" />
            <output name="output_file" file="khan_imputed.tsv" />
        </test>
    </tests>

    <help>
<![CDATA[
Extracts data from the input file.
]]>
    </help>
    <citations>
    </citations>

</tool>
