<tool id="two_file_odd_even" name="Splits_two_files_by_odd_even_lines" version="0.0.1">
    <description>Silly example just to test multiple inputs and outputs.</description>
    <stdio>
        <exit_code range="1:" />
        <exit_code range=":-1" />
        <regex match="Error:" />
        <regex match="Exception:" />
    </stdio>
    <command interpreter="python">
        two_file_odd_even.py
        --left_file $left_file
        --right_file $right_file
        --log_output $log_output
        --left_even_output $left_even_output
        --left_odd_output $left_odd_output
        --right_even_output $right_even_output
        --right_odd_output $right_odd_output
    </command>
    <inputs>
        <param name="left_file" type="data" format="txt" label="Left File to split" />
        <param name="right_file" type="data" format="txt" label="Right File to split" />
    </inputs>
    <outputs>
        <data name="log_output" format="txt" />
        <data name="left_even_output" format="txt" />
        <data name="left_odd_output" format="txt" />
        <data name="right_even_output" format="txt" />
        <data name="right_odd_output" format="txt" />
    </outputs>
    <tests>
        <test>
            <param name="left_file" value="left.txt" ftype="txt" /> 
            <param name="right_file" value="right.txt" ftype="txt" /> 
            <output name="left_even_output" file="left_even_output.txt" ftype="txt" />
            <output name="left_odd_output" file="left_odd_output.txt" ftype="txt" />
            <output name="right_even_output" file="right_even_output.txt" ftype="txt" />
            <output name="right_odd_output" file="right_odd_output.txt" ftype="txt" />
        </test>
    </tests>
    <help>
<![CDATA[
**What it does**

Compares the number of lines and characters in a list of datasets
]]>
    </help>
    <citations>
    </citations>
</tool>     
