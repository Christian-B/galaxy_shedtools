<tool id="list_length_counter" name="Count the length of each list in a collection" version="0.0.1">
    <description>Count the length of each list in a collection</description>
    <stdio>
        <exit_code range="1:" />
        <exit_code range=":-1" />
        <regex match="Error:" />
        <regex match="Exception:" />
    </stdio>
    <command interpreter="python">
        list_compare.py
        #for $left in $lefts
            --left_files $left
        #end for
        #for $right in $rights
            --right_files $right 
        #end for
        #if $names.type =="file"
            --names ${names.file_of}
        #end if
        #if $names.type =="numbered"
            -s ${names.start_number}
        #end if
        --output ${output}
    </command>
    <inputs>
        <param name="lefts" type="data" format="txt" multiple="True" label="Left Files to count" />
        <param name="rights" type="data" format="txt" multiple="True" label="Right Files to count" />
        <conditional name="names">
            <param name="type" type="select" label="How should file names be obtained." help="Select type of action required.">
                <option value="file" selected="true">File names loaded from a file</option>
                <option value="numbered">Use numbers for the file names</option>
            </param>
            <when value="file" >
               <param name="file_of" type="data" format="txt" label="File with names for the files" />
            </when>
            <when value="numbered" >
               <param name="start_number" size="4" type="integer" value="1" label="Start number for numbering files" />
            </when>
        </conditional>
    </inputs>
    <outputs>
        <data name="output" format="txt" />
    </outputs>
    <tests>
        <test>
            <param name="lefts" value="file1.txt,file2.txt,file2_a.txt,file2_b.txt" ftype="txt" /> 
            <param name="rights" value="file1_a.txt,file2_a.txt,file3.txt,file4.txt" ftype="txt" /> 
            <param name="names|type" value="file" /> 
            <param name="names|file_of" value="four_list.txt" ftype="txt" /> 
            <output name="output" file="four_output.txt" ftype="txt" />
        </test>
    </tests>
    <help>
<![CDATA[
**What it does**

Compares the number of lines and characters in a list of datasets
]]>
    </help>
    <citations>
    </citations>
</tool>     
